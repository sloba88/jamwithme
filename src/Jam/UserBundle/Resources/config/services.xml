<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <!--
    <parameters>
        <parameter key="jam_user.example.class">Jam\UserBundle\Example</parameter>
    </parameters> -->

    <services>
        <!--
        <service id="jam_user.example" class="%jam_user.example.class%">
            <argument type="service" id="service_id" />
            <argument>plain_value</argument>
            <argument>%parameter_name%</argument>
        </service>
        -->

        <service id="jam_user.registration.form.type" class="Jam\UserBundle\Form\Type\RegistrationFormType">
            <tag name="form.type" alias="jam_user_registration" />
            <argument>%fos_user.model.user.class%</argument>
        </service>

        <service id="jam_user.profile.form.type" class="Jam\UserBundle\Form\Type\ProfileFormType">
            <tag name="form.type" alias="jam_user_profile" />
            <argument>%fos_user.model.user.class%</argument>
        </service>

        <service id="jam_user.image_type_extension" class="Jam\UserBundle\Form\Extension\ImageTypeExtension">
            <tag name="form.type_extension" alias="file" />
        </service>

        <service id="jam_user.artist.form.data_transformer" class="Jam\CoreBundle\Form\DataTransformer\ArtistTransform">
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>

        <service id="artist.form.type" class="Jam\CoreBundle\Form\Type\ArtistType">
            <argument type="service" id="jam_user.artist.form.data_transformer"/>
            <tag name="form.type" alias="artist_type" />
        </service>

    </services>

</container>
