{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">

    <div class="col-md-6">

        {% if ( user.images|length == 0 ) %}
            <img src="{{ asset('/images/placeholder-user.jpg') | imagine_filter('my_thumb') }}" class="img-circle" />
        {% else %}
            {% for i in user.images %}
                <img src="{{ asset(i.getWebPath()) | imagine_filter('my_thumb') }}" class="img-circle" />
            {% endfor %}
        {% endif %}

        <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
        <p>{{ 'profile.show.first_name'|trans }}: {{ user.firstName }}</p>
        <p>{{ 'profile.show.last_name'|trans }}: {{ user.lastName }}</p>
        <p>{{ 'profile.show.about_me'|trans }}: {{ user.aboutMe }}</p>

        <p>Age: {{ user.age }}</p>
        <p>Gender: {{ user.genderText }}</p>

        <a href="{{ path('send_message', {'username': user.username}) }}" class="btn btn-sm btn-default">Send Message</a>

    </div>

    <div class="col-md-6">

        <p>Genres: </p>
        <ul>
        {% for g in user.genres %}
            <li><a href="{{ path('musicians', {'search_form[genres][]' : g.id }) }}">{{ g.name }}</a></li>
        {% endfor %}
        </ul>

        <p>Artists: </p>
        <ul>
            {% for a in user.artists %}
                <li>{{ a.name }}</li>
            {% endfor %}
        </ul>

        <p>Instruments: </p>
        <ul>
            {% for i in user.instruments %}
                <li><a href="{{ path('musicians', {'search_form[instruments][]' : i.id }) }}">{{ i.name }}</a></li>

            {% endfor %}
        </ul>

        <p>Brands: </p>
        <ul>
            {% for b in user.brands %}
                <li>{{ b.name }}</li>
            {% endfor %}
        </ul>

        <p>Jams: </p>
        <ul>
            {% for j in user.jamsMember %}
                <li><a href="{{ path('view_jam', { 'slug': j.jam.slug } ) }}">{{ j.jam.name }}</a> ({{ j.role }})</li>
            {% endfor %}
        </ul>

    </div>

</div>
