{% extends 'JamWebBundle::layoutNoSidebar.html.twig' %}

{% block main_content %}

    <div class="row messages-header">

        <div class="col-xs-12">
            <span class="jam-type">{{ jam.type|jam_type_to_string }}</span>

            {% if jam.creator == app.user %}
                <div class="col-xs-6 col-md-3 pull-right">
                    <a href="{{ path('edit_jam', { 'slug': jam.slug }) }}" class="btn btn-primary"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Edit Jam</a>
                </div>
            {% endif %}
        </div>

        <div class="col-xs-12" style="margin-top: 10px;">
            <h1 class="title">{{ jam.name }}</h1>
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-md-6">

            <p class="pull-right">{{ jam.createdAt | date('Y-m-d') }}</p>

            {% if jam.location %}
                {% if jam.location.getAdministrativeAreaLevel3 %}
                    <div class="location">
                        <i class="fa fa-map-marker"></i> {% if jam.location.neighborhood %}{{ jam.location.neighborhood }},{% endif %} {{ jam.location.getAdministrativeAreaLevel3 }}
                    </div>
                {% endif %}
            {% endif %}

            <h3>{{ 'text.looking.for.instruments'|trans }}:</h3>

            <ul class="tags jam-instrument-tags">
                {% for m in jam.instruments %}
                    <li>{{ m.instrument.name }}</li>
                {% endfor %}
            </ul>

            <div class="jam-description-container">
                <h3>{{ 'text.description'|trans }}:</h3>

                <p>{{ jam.description|default('text.no.description'|trans) }}</p>
            </div>

            <div class="clearfix"></div>

            <h3>{{ 'text.genres'|trans }}:</h3>

            {% if jam.genres|length > 0 %}
                <ul class="tags">
                    {% for j in jam.genres %}
                        <li>{{ j.name }}</li>
                    {% endfor %}
                </ul>
            {% else %}
                {{ 'text.none'|trans }}
            {% endif %}

            <h3>{{ 'text.sounds.like'|trans }}:</h3>

            {% if jam.artists|length > 0 %}
                <ul class="tags">
                    {% for j in jam.artists %}
                        <li>{{ j.name }}</li>
                    {% endfor %}
                </ul>
            {% else %}
                {{ 'text.none'|trans }}
            {% endif %}

            <hr />

            <div class="row">
                <div class="col-md-12">
                    <i class="fa fa-users" aria-hidden="true"></i>  {{ jam.interests|length }} people interested
                </div>
            </div>
            <br />
            {% if is_granted("ROLE_USER") and app.user != jam.creator %}
                <div class="row">
                    <div class="col-md-6">
                    {% if app.user.id not in jam.membersMusiciansIds %}
                        <a href="#" id="jam-add-to-interest" data-jam="{{ jam.id }}" class="btn btn-default"><i class="fa fa-thumbs-up" aria-hidden="true"></i> SHOW INTEREST</a>
                    {% else %}
                        <a href="#" id="jam-remove-from-interest" data-jam="{{ jam.id }}" class="btn btn-default"><i class="fa fa-thumbs-down" aria-hidden="true"></i> REMOVE INTEREST</a>
                    {% endif %}
                    </div>
                </div>
            {% endif %}
        </div>

        <div class="col-md-6">

            <div class="panel panel-default jam-members-container">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-users" aria-hidden="true"></i> Current members</h3>
                </div>
                <div class="panel-body">
                    <ul class="members-list">
                        {% for m in jam.members %}
                            {% if m.musician is not null %}
                                <li class="member">
                                    {% if app.user and app.user != m.musician %}
                                        <a href="#" class="open-conversation" data-toggle="tooltip" title="{{ 'button.message'|trans }}" data-user-id="{{ m.musician.id }}" data-user="{{ m.musician.username }}"><i class="glyphicon glyphicon-envelope"></i></a>
                                    {% else %}
                                        <br />
                                    {% endif %}
                                    <a href="{{ path('musician_profile', { 'username': m.musician.username }) }}">
                                        <img src="{{ m.musician.avatar | imagine_filter('my_medium_1') }}" />
                                        <h4 class="name">
                                            {% if m.musician.firstName or m.musician.lastName %}
                                                {{ m.musician.firstName }}<br />{{ m.musician.lastName }}
                                        {% else %}
                                                {{ m.musician.username }}
                                        {% endif %}</h4></a>
                                    <p>{{ m.instrument.name }}</p>
                                </li>
                            {% endif %}
                            {% if m.invitee is not null %}
                                <br />
                                <li class="member invited-member" data-toggle="tooltip" title="Pending invitation" data-placement="right">
                                    <a href="#">
                                        <img src="{{ asset('assets/images/placeholder-user.png') | imagine_filter('my_medium_1') }}" />
                                        <h4 class="name">{{ m.invitee.firstName }}<br />{{ m.invitee.lastName }}</h4></a>
                                    <p>{{ m.instrument.name }}</p>
                                </li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>
            </div>

            <div class="panel panel-default jam-videos-container">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ 'label.videos'|trans }}</h3>
                </div>
                <div class="panel-body">

                    {% if jam.videos|length == 0 %}
                        <p>{{ 'label.no.videos'|trans }}</p>
                    {% endif %}

                    {% for v in jam.videos %}
                        <div class="ytvideo-holder">
                            <a class="ytvideo" rel="group" href="{{ v.url }}&autoplay=1&showinfo=0&controls=1">
                                <span class="play-icon"></span>
                                <img src="" height="160" width="260" />
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
