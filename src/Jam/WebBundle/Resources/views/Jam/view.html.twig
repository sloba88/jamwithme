{% extends 'JamWebBundle::layoutNoSidebar.html.twig' %}

{% block main_content %}

    <div class="col-md-12">

        <h2>{{ 'text.jam.name'|transchoice(jam.name)|desc('Jam name: %jam.name%') }}</h2>

        <div class="col-md-6">

            <p>Created at: {{ jam.createdAt | date('Y-m-d') }}</p>

            <h3>{{ 'text.description'|trans }}:</h3>

            <p>{{ jam.description|default('text.no.description'|trans) }}</p>

            <div class="clearfix"></div>

            <h3>{{ 'text.genres'|trans }}:</h3>

            <ul class="tags">
                {% for j in jam.genres %}
                    <li>{{ j.name }}</li>
                {% endfor %}
            </ul>

            <h3>{{ 'text.looking.for.instruments'|trans }}:</h3>

            <ul class="tags">
                {% for m in jam.members %}
                    {% if m.musician is null %}
                        <li>{{ m.instrument.name }}</li>
                    {% endif %}
                {% endfor %}
            </ul>

            <h3>{{ 'text.sounds.like'|trans }}:</h3>

            <ul>
                {% for j in jam.artists %}
                    <li>{{ j.name }}</li>
                {% endfor %}
            </ul>

        </div>

        <div class="col-md-6">
            <h3>Current members</h3>

            <ul class="members-list">
                {% for m in jam.members %}
                    {% if m.musician is not null %}
                        <li class="member">
                            <ul class="tags">
                                <li>{{ m.instrument.name }}</li>
                            </ul>
                            <a href="{{ path('musician_profile', { 'username': m.musician.username }) }}">
                                <img src="{{ m.musician.avatar | imagine_filter('my_thumb') }}" />
                                {{ m.musician.fullName }}</a>
                        </li>
                    {% endif %}
                    {% if m.invitee is not null %}
                        <li class="member invited-member">
                            <ul class="tags">
                                <li>{{ m.instrument.name }}</li>
                            </ul>
                            <a href="#">
                                <img src="{{ asset('assets/images/placeholder-user.png') | imagine_filter('my_thumb') }}" />
                                {{ m.invitee.firstName }} {{ m.invitee.lastName }}</a>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>

            <div class="clearfix"></div>

            <h3>Videos</h3>
            {% for v in jam.videos %}
                <div class="ytvideo-holder">
                    <a class="ytvideo" rel="group" href="{{ v.url }}&autoplay=1&showinfo=0&controls=1">
                        <span class="play-icon"></span>
                        <img src="" height="160" width="260" />
                    </a>
                </div>
            {% endfor %}
        </div>

    </div>

{% endblock %}
