{% extends 'JamWebBundle::layoutNoSidebar.html.twig' %}

{% block main_content %}

    <div class="col-md-12">

        <h2>{{ 'text.jam.name'|transchoice(jam.name)|desc('Jam name: %jam.name%') }}</h2>

        <div class="col-md-6">

            <h3>{{ 'text.description'|trans }}:</h3>

            <p>{{ jam.description }}</p>

            <div class="clearfix"></div>

            <h3>{{ 'text.genres'|trans }}:</h3>

            <ul>
                {% for j in jam.genres %}
                    <li>{{ j.name }}</li>
                {% endfor %}
            </ul>

            <h3>{{ 'text.looking.for.instruments'|trans }}:</h3>

            <ul>
                {% for j in jam.members %}
                    {% if j.musician is null %}
                        <li>{{ j.instrument.name }}</li>
                    {% endif %}
                {% endfor %}
            </ul>

            <h3>{{ 'text.sounds.like'|trans }}:</h3>

            <ul>
                {% for j in jam.artists %}
                    <li>{{ j.name }}</li>
                {% endfor %}
            </ul>

        </div>

        <div class="col-md-6">
            <h3>Current members</h3>

            <ul>
                {% for j in jam.members %}
                    {% if j.musician is not  null %}
                        <li><a href="{{ path('musician_profile', { 'username': j.musician.username }) }}">{{ j.musician.fullName }}</a> - <span>{{ j.instrument.name }}</span></li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>

    </div>

{% endblock %}
