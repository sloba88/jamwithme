{% extends 'JamWebBundle::layoutNoSidebar.html.twig' %}

{% block main_content %}

    <div class="row">
        <div class="filters-heading col-xs-12">
            <h1 class="filters-title">{{ headline }}</h1>
        </div>
        <div class="col-md-3 pull-right">
            <a href="{{ path('start_jam') }}" class="btn btn-primary col-md-3"><i class="fa fa-rocket" aria-hidden="true"></i> Start new jam</a>
        </div>
    </div>

    <div class="row with-scrollbar" style="height: 600px">
        <div class="clearfix">
            {% for j in jams %}
                <div class="col-md-4">
                    <h3><a href="{{ path('view_jam', {'slug': j.slug }) }}">{{ j.name }}</a></h3>

                    <span class="pull-right">{{ j.createdAt | date('Y-m-d') }}</span>

                    {% if j.location %}
                        {% if j.location.getAdministrativeAreaLevel3 %}
                            <div class="location">
                                <i class="fa fa-map-marker"></i> {% if j.location.neighborhood %}{{ j.location.neighborhood }},{% endif %} {{ j.location.getAdministrativeAreaLevel3 }}
                            </div>
                        {% endif %}
                    {% endif %}

                    <ul class="tags">
                        {% for g in j.genres %}
                            <li><a href="{{ path('musicians', {'genres' : g.id }) }}">{{ g.name }}</a></li>
                        {% endfor %}
                    </ul>

                    <label>Looking for someone who play:</label>
                    <ul class="tags">
                        {% for m in j.members %}
                            {% if m.musician is null %}
                                <li>{{ m.instrument.name }}</li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>

                <div class="col-md-8" style="border-left: 1px solid #eeeeee;">
                    <ul class="members-list">
                        {% for m in j.members %}
                            {% if m.musician is not null %}
                                <li class="member">
                                    <ul class="tags">
                                        <li>{{ m.instrument.name }}</li>
                                    </ul>
                                    <a href="{{ path('musician_profile', { 'username': m.musician.username }) }}">
                                        <img src="{{ m.musician.avatar | imagine_filter('my_thumb') }}" />
                                        {{ m.musician.fullName }}</a>
                                </li>
                            {% endif %}
                            {% if m.invitee is not null %}
                                <li class="member invited-member" data-toggle="tooltip" title="Pending invitation" data-placement="right">
                                    <ul class="tags">
                                        <li>{{ m.instrument.name }}</li>
                                    </ul>
                                    <a href="#">
                                        <img src="{{ asset('assets/images/placeholder-user.png') | imagine_filter('my_thumb') }}" />
                                        {{ m.invitee.firstName }} {{ m.invitee.lastName }}</a>
                                </li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>

                <div class="clearfix"></div>

                <hr />
            {% endfor %}
        </div>
    </div>

{% endblock %}