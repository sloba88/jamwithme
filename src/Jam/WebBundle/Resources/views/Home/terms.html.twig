{% extends '::base.html.twig' %}

{% block bodystyle %}background-image: url({{ asset('assets/images/background-dashboard.jpg') }}); overflow: auto;{% endblock %}

{% block body %}

    <section class="col-xs-12 col-sm-12 col-md-12 main-content">
        <div style="background-color: #fff; padding: 20px;">

            <h2 style="font-size: 26px; margin-top: 0;">Terms & Conditions</h2>

            <div class="clearfix" style="font-size: 13px;">
                    {% include 'JamWebBundle:Home:termsRaw.html.twig' %}

                    {% if is_granted("ROLE_USER") %}
                        <div class="clearfix">
                            <br />
                            <div class="col-md-4 col-sm-6 col-xs-6">
                                <a href="{{ path('accept-terms') }}" class="btn btn-primary"><i class="fa fa-thumbs-o-up"></i> Accept</a>
                            </div>

                            <div class="col-md-4 pull-right col-sm-6 col-xs-6">
                                <a href="{{ path('fos_user_security_logout') }}" type="button" class="btn btn-default"><i class="fa fa-thumbs-o-down" aria-hidden="true"></i> Deny</a>
                            </div>
                            <br /><br />
                        </div>
                    {% endif %}

            </div>
        </div>
    </section>

{% endblock %}