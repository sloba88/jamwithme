{% extends 'JamWebBundle::layout.html.twig' %}

{% block bodyclasses %}page-events{% endblock %}

{% block bodystyle %}background-image: url({{ asset('assets/images/background-dashboard.jpg') }}){% endblock %}

{% block main_content %}

    <iframe id="events-iframe" src="https://messis.fi/embed/?scope=2-months&listonly=true&category=14,52,53,37,35,36,68,38,39&range=60000&center={{ app.user.location.lat }},{{ app.user.location.lng }}&textcolor=000000&bgcolor=ffffff" width="100%" height="550px"></iframe>

{% endblock %}

{% block right_sidebar_content %}

    {% include "JamWebBundle:Common:completion.html.twig" %}

    {{ render(controller('JamWebBundle:Shouts:shouts' )) }}

{% endblock %}

{% block bottom_javascripts %}

    {% javascripts
    'vendor/leaflet-dist/leaflet.js'
    'vendor/leaflet.markercluster/dist/leaflet.markercluster-src.js'
    'assets/js/filter.js'
    'assets/js/map.js'
    '@JamWebBundle/Resources/public/js/shout.js'
    filter='?uglifyjs2'
    %}

    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
