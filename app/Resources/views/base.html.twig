    {% if not is_granted('ROLE_USER') %}
        <link href="{{ asset('landing/css/style.css')}}" rel="stylesheet">
    {% endif %}

    <style>
        {# TODO: move this to css files#}

        a {
            color: #3b385e;
        }

        .people-grid .people-info {
            padding: 10px 10px 5px 10px;
        }

        .people-grid .people-info .tags{
            height: 44px;
        }

        .people-grid .people-info .name{
            padding-right: 20px;
        }

        .ytvideo:hover {
            text-decoration: none;
        }

        .ytvideo-holder{
            position: relative;
            display: block;
            float: left;
            padding: 2px;
        }

        .play-icon {
            position: absolute;
            left: 43%;
            top: 29%;
            width: 0;
            height: 0;
            border-top: 30px solid transparent;
            border-bottom: 30px solid transparent;
            border-left: 50px solid silver;
            opacity: 0.6;
            cursor: pointer;
            display: none;
        }

        .ytvideo:hover .play-icon {
            display: inline-block;
        }

        header {
            border-bottom: 2px solid #FBBC09;
        }

        #actionConfirmModal {
            z-index: 99999999;
        }

        #subscribeToSearch{
            width: 300px;
            margin-top: 5px;
        }

        .conversation-single a {
            text-decoration: none;
            color: #fff;
        }

        .conversation-single .text a {
            color: #428bca;
        }

        .conversation-single .text a:hover{
            text-decoration: underline;
        }

        .conversation-single .time{
            color: #878595;
        }

        .open-conversation.active, .open-conversation:active {
            background: #fabc09;
        }

        .message-info a {
            text-decoration: none;
        }

        .shouts-listing-container h4 a{
            text-decoration: none;
            color: #fff;
        }

        .no-auth .main-content-inner{
            background: none;
        }

        .signup-page .fixed-alerts-container{
            max-width: 320px;
            margin: 0 auto;
            opacity: .9;
        }

        .sidebar-feedback{
            color: #eaeaea;
            font-size: 12px;
            text-align: center;
            padding: 10px;
            margin-top: 20px;
        }

        .sidebar-feedback p{
            margin-bottom: 5px;
        }

        .sidebar-feedback li {
            display: inline-block;
            font-size: 16px;
            padding: 0 4px;
        }

        .sidebar-feedback li a {
            color: gray;
            -moz-transition: background 0.3s ease, opacity 0.3s ease;
            -o-transition: background 0.3s ease, opacity 0.3s ease;
            -webkit-transition: background 0.3s ease, opacity 0.3s ease;
            transition: background 0.3s ease, opacity 0.3s ease;
        }

        .sidebar-feedback li a:hover {
            color: #fabc09;
        }

        form.has-global-errors .help-block {
            color: firebrick;
        }

        #map .mapIcon.map-icon-Strings{
            background-color: #874E99;
        }

        #map .mapIcon.map-icon-Percussions{
            background-color: #d03111;
        }

        #map .mapIcon.map-icon-Keys{
            background-color: #0bb6ca;
        }

        #map .mapIcon.map-icon-Vocals{
            background-color: #CC9900;
        }

        #map .mapIcon.map-icon-Wind{
            background-color: #FFCC00;
        }

        #map .mapIcon path{
            fill: #fff;
        }

        header.is-active .navbar-open{
            display: none;
        }

        header .navbar-close{
            display: none;
            color: #fff;
            font-size: 27px;
            position: relative;
            left: -16px;
        }

        header.is-active .navbar-close{
            display: inline-block;
        }

        header.is-active .navbar-close span{
            background: #2b2a3b;
            padding: 5px;
        }

        header.is-active .navbar-toggle{
            padding: 0;
        }

        .subscribe-info-search {
            clear: both;
            position: relative;
            top: 15px;
            max-width: 600px;
        }

        .invite-friend-box{
            cursor: pointer;
        }

        .invite-friend-box p{
            font-size: 12px;
        }

        #send-invites {
            margin-bottom: 20px;
        }

        .share-sidebar{
            border-bottom: 1px solid #41404f;
            padding: 18px 10px;
        }

        .share-sidebar h3{
            color: #fff;
            font-size: 16px;
            padding: 2px 0 10px 0px;
            margin-top: 5px;
        }

        .fos_user_registration_form_acceptedTerms_label .popover-content{
            color: firebrick;
        }

        .login-page-user .main-content {
            background-color: #fff;
            padding: 10px 0;
        }

        .page-settings .btn-save + i:lang(fi) {
            right: 86px;
        }

        .page-profile .no-auth.main-content {
            margin-top: 25px;
        }

        .conversation-participants-container {
            border-bottom: 4px solid #FBBC09;
            padding: 5px 0;
            height: 70px;
            margin-top: 5px;
        }

        .conversation-participants-container img {
            float: left;
            margin-right: 15px;
            background-color: #fff;
        }

        .conversation-participants-container a:hover {
            text-decoration: none;
        }

        .conversation-participants-container p.name {
            color: #fff;
            text-transform: uppercase;
            padding-left: 55px;
            margin: 10px 0 0 0;
            font-size: 14px;
            font-family: "CooperHewitt Bold";
        }

        .nav-language {
            position: relative;
            top: -4px;
        }

        .nav-language #langaugeMenuHome{
            font-size: 12px;
            background: none;
            color: #a7a7af;
        }

        .nav-language ul.dropdown-menu {
            background-color: #000;
            padding: 0;
            min-width: auto;
        }

        .nav-language ul.dropdown-menu li{
            margin: 0;
            display: block;
            padding: 2px 10px;
        }

        .nav-language ul.dropdown-menu li a {
            font-size: 14px;
            color: #a7a7af;
        }

        .nav-language .dropdown-menu > .active > a, .nav-language .dropdown-menu > .active > a:hover, .nav-language .dropdown-menu > .active > a:focus {
            background: none;
            color: #fff;
        }

        .people-grid.teacher {
            background-color: seashell;
        }

        .find-out-more {
            background: #652978;
            border: 1px solid silver;
            font-family: 'Crete Round', serif;
            color: #fff;
            font-size: 24px;
            padding: 15px;
        }

        .find-out-more:hover{
            opacity: .9;
        }

        .social li a.about-us-home-link {
            font-size: 14px;
            padding-top: 3px;
            text-transform: uppercase;
        }

        #events-iframe{
            margin-top: 10px;
            border: 1px solid silver;
        }

        #musician_videos .remove-video {
            position: absolute;
            top: 5px;
            right: 5px;
            background-color: black;
            padding: 2px;
            font-size: 11px;
            color: #fff;
        }

        #musician_videos .remove-video:hover {
            text-decoration: none;
        }

        #musician_videos .add-video-box {
            margin-bottom: 10px;
        }

        #soundcloud_tracks .add-sound-box {
            margin-bottom: 10px;
        }

        #soundcloud_tracks li {
            margin-bottom: 10px;
        }

    </style>

