<!DOCTYPE html>
<html lang="{{ app.request.locale | default('en') }}">
<head>
    <title>{{ page.title|default('text.title'|trans) }}</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="{{ 'text.meta.description'|trans }}">

    <!--mobile-->
