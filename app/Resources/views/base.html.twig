<!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
        <!-- Bootstrap -->
        <link href="{{ asset('/css/jquery-ui.min.css') }}" rel="stylesheet">
        <link href="{{ asset('/css/select2.css') }}" rel="stylesheet"/>
        <link href="{{ asset('/css/perfect-scrollbar.css') }}" rel="stylesheet">
        <link href="{{ asset('/css/styles.css') }}" rel="stylesheet">

        <style>
            html body #map-canvas {
                height: 600px;
                margin: 0px;
                padding: 0px;
                width: 100%;
                clear: both;
            }

            .ui-autocomplete {
                z-index: 9999 !important;
            }

            .profile-media-wall-item { margin-bottom: 10px; }
        </style>

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->

    <script src="https://cdn.socket.io/socket.io-1.0.4.js"></script>
    <script src="{{ node_server }}/socket.io/socket.io.js"></script>

    <script>
        baseURL = '{{ app.request.getBaseURL() }}';
        var socket = io('{{ node_server }}');

        {% if app.user %}
        socket.on('registerConnectedUser', function (data) {
            //TODO: this must be done in Redis
            socket.emit('registerUserData', { userID: '{{ app.user.id }}', 'username': '{{ app.user.username }}' });
        });
        {% endif %}
    </script>

</head>
<body class="{% block bodyclasses %}{% endblock %}" style="{% block bodystyle %}background-image: url({{ asset('images/background-dashboard.jpg') }}){% endblock %}">

<header>
    <div class="container-fluid">

        <div class="row">

            <div class="col-xs-2 visible-xs">
                <button class="navbar-toggle" type="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div><!--menu button-->

            <div class="col-xs-8 col-sm-9">
                <div class="navbar-brand">
                    <a href="{{ path('home') }}"><img src="{{ asset('images/logo.png') }}" alt="Logo"></a>
                    <span class="outer"><span>.</span> Bringing Musicians Together</span>
                </div>
            </div>

            {% if is_granted("ROLE_USER") %}

                <div class="col-xs-2 visible-xs">
                    <button class="btn search-toggle" type="button"><i class="glyphicon glyphicon-search"></i></button>
                </div><!--search-toggle-->

                <div class="col-xs-12 col-sm-3 search-block-container">
                    <div class="input-group search-block">
                        <input type="text" id="autocomplete" class="form-control" placeholder="SEARCH" autocomplete="off" />
                        <span class="hidden-xs input-group-btn">
                            <button class="btn btn-default" type="button"><i class="glyphicon glyphicon-search"></i></button>
                        </span>
                    </div><!-- /input-group -->
                </div><!--search-block-container-->

            {% endif %}
        </div>

    </div>
</header><!--header ends-->

<div class="container-fluid">
    <div class="row">

        {% if is_granted("ROLE_USER") %}
            {% if not app.user.location %}
                <div class="flash-message warning alert-warning">
                    <em>Please <a href="{{ path('fos_user_profile_edit') }}">set your location</a> in order to be able to search people around you.</em>
                </div>
            {% endif %}
        {% endif %}

        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="flash-message alert alert-success">
                <em>{{ flashMessage }}</em>
            </div>
        {% endfor %}

        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="flash-message alert alert-danger">
                <em>{{ flashMessage }}</em>
            </div>
        {% endfor %}

        {% block body %}{% endblock %}

    </div>
</div>

<div class="conversation">

    <div class="conversation-close clearfix">
        <a href="#" class="close-link"><i class="glyphicon glyphicon-remove"></i>close conversation</a>
    </div>
    <!--conversation-close ends-->

    <div class="conversation-new">
        <input type="text" class="form-control autocomplete" placeholder="+ Type a name">
    </div>

    <div class="conversation-container conversation-message-box"></div>
    <!--conversation-container ends-->

    <div class="conversation-send">
        <form role="form">
            <textarea class="form-control send-message" rows="3" placeholder="Write message"></textarea>
            <button type="submit" class="btn btn-primary send-message-btn">Send</button>
        </form>
    </div>
    <!--conversation-send ends-->

</div><!--conversation ends-->


