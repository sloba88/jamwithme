<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- Bootstrap -->
        <link href="{{ asset('/css/bootstrap.css') }}" rel="stylesheet" media="screen">

        <!-- HTML5 Shim and Respond.js add IE8 support of HTML5 elements and media queries -->
        {% include 'BraincraftedBootstrapBundle::ie8-support.html.twig' %}

        <style>

            body {
                background-color: #EEEEEE;
                padding-bottom: 40px;
                padding-top: 60px;
            }

        </style>
    </head>
    <body>

    <!-- Fixed navbar -->
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('home') }}">Jam With Me</a>
            </div>
                <ul class="nav navbar-nav navbar-left">
                    <li><a href="{{ path('musicians') }}">Musicians</a></li>
                    <li><a href="{{ path('jams') }}">Jams</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="active"><a href="{{ path('home') }}">Home</a></li>
                    {% if is_granted("ROLE_USER") %}
                        <li><a href="">Logged in as: {{ app.user.username }}</a></li>
                        <li><a href="{{ path('fos_user_profile_edit') }}">My Profile</a></li>
                        <li><a href="{{ path('start_jam') }}">Start a jam</a></li>
                        <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
                    {% else %}
                        <li><a href="{{ path('fos_user_security_login') }}">Login</a></li>
                        <li><a href="{{ path('fos_user_registration_register') }}">Register</a></li>
                    {% endif %}
                </ul>
        </div>
    </div>

    <div class="container">

        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="flash-message alert alert-success">
                <em>{{ flashMessage }}</em>
            </div>
        {% endfor %}

        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="flash-message alert alert-danger">
                <em>{{ flashMessage }}</em>
            </div>
        {% endfor %}

        {% block body %}{% endblock %}
        {% block fos_user_content %}
        {% endblock fos_user_content %}
    </div>
        <!-- jQuery (necessary for Bootstraps JavaScript plugins) -->
        <script src="https://code.jquery.com/jquery.js"></script>
        <!-- Include all JavaScripts, compiled by Assetic -->
        <script src="{{ asset('/js/bootstrap.js') }}"></script>
        {% block javascripts %}{% endblock %}

    <script>
        var $collectionHolder;

        var $addInstrumentLink = $('<a href="#" class="add_instrument">Add a instrument</a>');
        var $newInstrumentLi = $('<li></li>').append($addInstrumentLink);

        var $addGenreLink = $('<a href="#" class="add_genre">Add genre</a>');
        var $newGenreLi = $('<li></li>').append($addGenreLink);

        jQuery(document).ready(function() {
            $instrumentsCollectionHolder = $('ul.instruments');
            $instrumentsCollectionHolder.find('li').each(function() {
                addTagFormDeleteLink($(this));
            });
            $instrumentsCollectionHolder.append($newInstrumentLi);
            $instrumentsCollectionHolder.data('index', $instrumentsCollectionHolder.find(':input').length);
            $addInstrumentLink.on('click', function(e) {
                e.preventDefault();
                addTagForm($instrumentsCollectionHolder, $newInstrumentLi);
            });


            $genresCollectionHolder = $('ul.genres');
            $genresCollectionHolder.find('li').each(function() {
                addTagFormDeleteLink($(this));
            });
            $genresCollectionHolder.append($newGenreLi);
            $genresCollectionHolder.data('index', $genresCollectionHolder.find(':input').length);
            $addGenreLink.on('click', function(e) {
                e.preventDefault();
                addTagForm($genresCollectionHolder, $newGenreLi);
            });

        });

        function addTagForm($collectionHolder, $newLinkLi) {
            // Get the data-prototype explained earlier
            var prototype = $collectionHolder.data('prototype');

            // get the new index
            var index = $collectionHolder.data('index');
            var newForm = prototype.replace(/__name__/g, index);

            $collectionHolder.data('index', index + 1);

            var $newFormLi = $('<li></li>').append(newForm);
            $newLinkLi.before($newFormLi);
            addTagFormDeleteLink($newFormLi);
        }

        function addTagFormDeleteLink($tagFormLi) {
            var $removeFormA = $('<a href="#">remove</a>');
            $tagFormLi.append($removeFormA);

            $removeFormA.on('click', function(e) {
                e.preventDefault();
                $tagFormLi.remove();
            });
        }


    </script>

    </body>
</html>