<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>{% block title %}Jamifind | find musicians near you{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    {% block stylesheets %}
        {% stylesheets
        'vendor/font-awesome/css/font-awesome.css'
        'vendor/select2/select2.css'
        'vendor/perfect-scrollbar/css/perfect-scrollbar.css'
        filter='cssrewrite' filter='?uglifycss'
        %}
        <link rel="stylesheet" href="{{ asset_url }}">
        {% endstylesheets %}
    {% endblock %}

    <link rel="stylesheet" href="{{ asset('assets/css/styles.css') }}">

    {% block bottomstylesheets %}{% endblock %}

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body class="{% block bodyclasses %}{% endblock %}" style="{% block bodystyle %}background-image: url({{ asset('assets/images/background-dashboard.jpg') }}){% endblock %}">

<header>
    <div class="container-fluid">

        <div class="row">

            <div class="col-xs-2 visible-xs visible-sm">
                <button class="navbar-toggle" type="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div><!--menu button-->

            <div class="col-xs-8 col-md-9">
                <div class="navbar-brand">
                    <a href="{{ path('home') }}"><img src="{{ asset('assets/images/logo.png') }}" alt="Logo"></a>
                    <span class="outer"><span>.</span> Bringing Musicians Together</span>
                </div>
            </div>

        </div>

    </div>
</header><!--header ends-->

<div class="container-fluid">
    <div class="row">
        <div class="fixed-alerts-container col-xs-12"></div>

        {% block body %}
            {% block fos_user_content %}{% endblock fos_user_content %}
        {% endblock %}

    </div>
</div>

{% block javascripts %}

    {% javascripts
    'vendor/jquery/jquery.js'
    'vendor/bootstrap/dist/js/bootstrap.js'
    filter='?uglifyjs2'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

{% endblock %}

<script>
    $(function() {
        $('input[type=checkbox]').next('label').prepend('<span></span>');
        $('.info-popover').popover();

        $('#fos_user_registration_form_plainPassword_second').bind('cut copy paste',function(e) {
            e.preventDefault();
        });
    });
</script>
</body>
</html>
